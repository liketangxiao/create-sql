<idea-plugin>
    <!-- 插件唯一标识，用于在插件市场中唯一确定身份的标识，在不同版本中，必须保持一致，建议设置值为：包名 + 插件名称 -->
    <id>com.demo.plugin.create-sql</id>
    <!-- 插件的名称，显示在IDEA已安装插件列表中 -->
    <name>create-sql</name>
    <!--  -->
    <vendor email=""></vendor>
    <!--    <idea-version since-build="191.0"/>-->
    <!-- 插件的描述 -->
    <description>
        <![CDATA[
        <h2>创建可重复执行SQL脚本</h2>
        <a href="https://github.com/liketangxiao/create-sql">create-sql source code and document</a><br>
        <ul>
        更新日志
        - v1.02
          - 支持表名和列表根据定义编码自动翻译成注释
        - v1.01
          - 优化支持数据库查询数据生成可重复执行sql语句
        - v1.0
          - 支持生成以下生成脚本
            - ADD_TABLE(创建表),
            - ADD_INDEX(创建索引),
            - ADD_COLUMN(创建字段),
            - ADD_DATA(插入数据存储过程需自己编辑),
            - INSERT_DATA(插入可重复执行数据)
        </ul>
        ]]>
    </description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- 配置 File -> Settings -> Tools -->
<!--        <projectConfigurable groupId="tools" displayName="My Test Config" id="setting.id"-->
<!--                             instance="com.idea.plugin.window.SettingFactory"/>-->
        <!-- 窗体 (IDEA 界面右侧) -->
<!--        <toolWindow id="Read-Book" secondary="false" anchor="right"-->
<!--                    factoryClass="com.idea.plugin.window.ReadFactory"/>-->
    </extensions>

    <actions>
        <action id="HelloWorld-project" class="com.idea.plugin.popup.ProjectViewPopupAction"
                text="FsscSqlFile" description="CreateSqlFile" icon="/img/logo.svg">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
        <action id="HelloWorld-editor" class="com.idea.plugin.popup.EditorPopupAction"
                text="FsscSqlFile" description="CreateSqlFile" icon="/img/logo.svg">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>